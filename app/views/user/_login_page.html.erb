<div class="ui small modal signin-modal">
	<i class="close icon"></i>
	<div class="header">
		<h2>Login</h2>
	</div>
	<div class="content">
		<%= form_tag login_url, :class=>"ui form" do |f| %>
		<div class="field">
			<label>Email</label>
			<input type="email" name="user_details[email]">
		</div>
		<div class="field">
			<label>Password</label>
			<input type="password" name="user_details[password]">
		</div>
			<button type="submit" name="submit" class="ui button basic m-button">Login</button>
		<% end %>
	</div>
</div>