<div class="ui grid middle aligned one column center aligned" id="header-container">
  <div class="row">
    <div class="three wide column logo-side" data-content="Fruktur">
      <div class="ui grid">
        <div class="six wide column">
          <a href="#" role="button" class="my-link"><i class="home icon"></i>Profile</a>
        </div>
        <div class="nine wide column">
          <a href="<%= booking_page_path(1) %>" role="button" class="my-link"><i class="plane icon"></i> Book flight</a>
        </div>
      </div>
    </div>
    <div class="six wide column" id="logo">
      <span></span>
      <a href="/"><h1 class="ui first header">Moscavion</h1></a>
      <span></span>
    </div>
    <div class="three wide column logo-side" data-content="Brains">
      <div class="ui grid">
        <div class="nine wide column">
          <a href="#" onclick="showManageForm()" role="button" class="my-link"><i class="edit icon"></i> Manage</a>
        </div>
        <div class="six wide column">
          <a href="#" role="button" class="my-link"><i class="sign in icon"></i> Sign In</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="ui modal small manage-form">
  <div class="header">
    Search with your booking code to edit
  </div>
  <div class="content">
    <%= form_tag search_bookings_url, :class => "ui form" do %>
      <div class="field">
        <label>Booking Code</label>
        <input type="text" name="booking[booking_code]" >
      </div>
      <button class="ui button">Find</button>
    <% end %>
  </div>
  <div class="actions">
    
  </div>
</div>

<script type="text/javascript">
  var showManageForm = function() {
    $(".manage-form").modal("show");
  }
</script>
