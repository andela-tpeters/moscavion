<div class="ui grid middle aligned one column center aligned" id="header-container">
  <div class="row">
    <div class="three wide column logo-side" data-content="Fruktur">
      <div class="ui grid">
        <div class="six wide column left aligned">
          <a href="<%= your_bookings_path %>" role="button" class="my-link"><i class="home icon"></i>Profile</a>
        </div>
        <div class="nine wide column right aligned">
          <a href="#" onclick="searchFlight()" role="button" class="my-link"><i class="plane icon"></i> All flight</a>
        </div>
      </div>
    </div>
    <div class="six wide column" id="logo">
      <span></span>
      <a href="/"><h1 class="ui first header">Moscavion</h1></a>
      <span></span>
    </div>
    <div class="three wide column logo-side" data-content="Brains">
      <div class="ui grid">
        <div class="nine wide column left aligned">
          <a href="#" onclick="showManageForm()" role="button" class="my-link"><i class="edit icon"></i> Manage</a>
        </div>
        <div class="seven wide column right aligned">
          <% if session[:user_id].nil? %>
            <a href="#" role="button" class="my-link" onclick="openSignin()"><i class="sign in icon"></i> Sign In</a>
          <% else %>
            <a href="<%= logout_path %>" role="button" class="my-link" remote="true"><i class="sign out icon"></i>Log Out</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

