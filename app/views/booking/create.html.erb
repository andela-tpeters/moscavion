<div class="center aligned grid ui sixteen wide">
	<div class="row">
		<div class="ui middle aligned grid stackable booking-main-container">
			<div class="eight wide column">
				<div class="">
					<div class="ui center aligned grid">
						<div class="fullwidth">
							<div class="ui segment">
								<a class="ui grey ribbon label"><i class='info icon'></i>Overview</a>
								<h3><i class="plane icon"></i>Flight Details</h3>
								<p></p>
								<%= render :partial => "flight_description_table" %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="eight wide column">
				<div>
					<div class="ui center aligned grid">
						<div class="fullwidth">
							<div class="ui segment">
								<a class="ui grey ribbon right label"><i class='book icon'></i>Passengers Information</a>
								<div style="">
									<p>
										<% if flash[:errors] %>
										<div class="ui error small message transition">
											<i class="close icon"></i>
											<div class="header">Error(s): </div>
											<ul>
												<% flash[:errors].each do |msg| %>
												<li><%= msg %></li>
												<% end %>
											</ul>
										</div>
										<% end %>
										<% if flash[:notice] %>
										<div class="ui positive small message transition">
											<%= flash[:notice] %>
										</div>
										<% end %>
									</p>
									<%= render :partial => "new_booking_form" %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%= render :partial => "confirmation_modal" %>
